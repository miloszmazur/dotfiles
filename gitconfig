[alias]
  alias = "! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /"
  ac =  "!git add -u . && git commit"
  ci = commit
  co = checkout
  st = "status"
  out = "log --pretty=oneline --abbrev-commit --graph @{u}.."
  inc = "!git fetch && git log --pretty=oneline --abbrev-commit --graph ..@{u}"
  br="!git switch $(git branch --all | fzf)"
  fl = "log -u"
  glog = "log --graph --oneline --decorate --all --pretty"
  ll = "log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat"
  ls = "log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate"
  lt = "log --graph --oneline --decorate --all"
  lg = "log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit"
  count   = "!git shortlog -sn"
[branch]
  sort = -committerdate
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[column]
  ui = auto
[commit]
  verbose = true
[core]
  excludesfile = ~/.gitexcludes
  editor = nvim
  pager = delta
[credential]
  helper = osxkeychain
[diff]
  algorithm = histogram
  mnemonicPrefix = true
  renames = true
  colorMoved = plain
[fetch]
  prune = true
  pruneTags = true
  all = true
[help]
  autocorrect = prompt
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[push]
  autosetupremote = true
  followTags = true
[pull]
  rebase = true
  ff = only
[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true
[rerere]
  enabled = true
  autoupdate = true
[advice]
  detachedHead = false
[checkout]
  defaultRemote=origin
[merge]
	tool = fugitive
	conflictstyle = zdiff3
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[delta]
  navigate = true
  dark = true
[tag]
  sort = version:refname
